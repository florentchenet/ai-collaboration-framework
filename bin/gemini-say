#!/bin/bash
# gemini-say - Formatted message output for Gemini
# Automatically adds Gemini header with blue diamond emoji

MESSAGE="$*"

if [ -z "$MESSAGE" ]; then
    # Read from stdin if no arguments
    MESSAGE=$(cat)
fi

# Output with Gemini header
echo ""
echo "### ðŸ”· Gemini"
echo "$MESSAGE"
echo ""
